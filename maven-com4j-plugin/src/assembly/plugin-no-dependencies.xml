<!-- 
By not specifying the <id> element, we effectively overwrite the maven target jar file.  
 -->
<assembly>
  <formats>
    <format>jar</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <dependencySets>
    <dependencySet>
      <outputDirectory></outputDirectory>
      <outputFileNameMapping></outputFileNameMapping>
      <unpack>true</unpack>
      <includes>
      	<include>net.java.dev.com4j:com4j</include>
      	<include>net.java.dev.com4j:com4j-tlbimp</include>
      	<include>net.java.dev.com4j:com4j-args4j</include>
      </includes>
    </dependencySet>
  </dependencySets>
  <fileSets>
    <fileSet>
      <directory>target/classes</directory>
      <outputDirectory></outputDirectory>
    </fileSet>
  </fileSets>
</assembly>
